{
	"name": "node-themoviedb",
	"version": "1.0.0",
	"description": "A Node.JS wrapper for The Movie DB API v3 and v4",
	"author": "Andy Wampir <wampirchikkkk@yandex.ru>",
	"license": "MIT",
	"main": "dist/src/index.js",
	"engines": {
		"node": ">=10"
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@types/node": "^12",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"ava": "next",
		"c8": "^7.6.0",
		"dotenv": "^8.2.0",
		"eslint": "^7.23.0",
		"eslint-plugin-ava": "^12.0.0",
		"np": "^7.4.0",
		"nyc": "^15.1.0",
		"source-map-support": "^0.5.19",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"got": "^11.8.2"
	},
	"scripts": {
		"build": "tsc",
		"test": "ava --serial",
		"coverage": "c8 yarn test",
		"coverage:alternative": "nyc yarn test",
		"release": "np",
		"release:preview": "np --preview",
		"lint": "eslint src/**/*.ts test/**/*.ts --ignore-path .gitignore",
		"lint:fix": "eslint src/**/*.ts test/**/*.ts --ignore-path .gitignore --fix"
	},
	"types": "./dist/src",
	"files": [
		"dist/src",
		"LICENSE.md"
	],
	"keywords": [
		"tmdb",
		"tmdb-api",
		"moviedb",
		"themoviedb",
		"themoviedatabase",
		"wrapper",
		"movie",
		"the movie db",
		"tv shows"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/andywampir/node-themoviedb.git"
	},
	"bugs": {
		"url": "https://github.com/andywampir/node-themoviedb/issues"
	},
	"homepage": "https://github.com/andywampir/node-themoviedb",
	"ava": {
		"files": [
			"test/**/*",
			"!test/**/helper.ts",
			"!test/**/_*"
		],
		"require": [
			"ts-node/register",
			"dotenv/config"
		],
		"extensions": [
			"ts"
		],
		"failFast": false,
		"timeout": "30s"
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"cache": false
	}
}
